<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- osdvideosettings/osdaudiosettings -->
	<defaultcontrol always="true">5</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<control type="group">
			<posx>510</posx>
			<posy>240</posy>
			<animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>

			<control type="label" id="2">
				<!-- Settings -->
				<posx>15</posx>
				<posy>48</posy>
				<width>870</width>
				<font>Light38</font>
								<align>center</align>
			</control>

			<control type="grouplist" id="5">
				<!-- Control Area -->
				<posx>15</posx>
				<posy>120</posy>
				<width>870</width>
				<height>552</height>
				<itemgap>8</itemgap>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<onleft>28</onleft>
				<onright>28</onright>
				<onup>28</onup>
				<ondown>28</ondown>
			</control>

			<control type="button" id="7">
				<!-- Default Button -->
				<align>left</align>
			</control>

			<control type="radiobutton" id="8">
				<!-- Default RadioButton -->
				<align>left</align>
			</control>

			<control type="spincontrolex" id="9">
				<!-- Default spincontrolex -->
				<align>left</align>
				<reverse>yes</reverse>
			</control>

			<control type="sliderex" id="10">
				<!-- Default Slider -->
				<align>left</align>
			</control>

		</control>

	</controls>

</window>