<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- filemanager -->
	<defaultcontrol always="true">20</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>GlobalBackground</include>

		<control type="group">
			<!-- Left panel -->
			<posx>75</posx>
			<posy>78</posy>

			<control type="image">
				<posx>-30</posx>
				<posy>-30</posy>
				<width>870</width>
				<height>1020</height>
				<texture border="3">global/Panel.png</texture>
			</control>

			<control type="label" id="101">
				<!-- Header Label -->
				<posx>23</posx>
				<width>780</width>
				<align>left</align>
				<label>-</label>
				<font>Light38</font>
							</control>

			<control type="list" id="20">
				<!-- Left File List -->
				<posx>15</posx>
				<posy>96</posy>
				<width>780</width>
				<height>759</height>
				<onleft>21</onleft>
				<onright>21</onright>
				<onup>20</onup>
				<ondown>20</ondown>

				<itemlayout height="69" width="780">

					<control type="image">
						<width>780</width>
						<height>66</height>
						<texture border="9">global/ButtonNF.png</texture>
					</control>

					<control type="label">
						<posx>30</posx>
						<width>720</width>
						<align>left</align>
						<info>ListItem.Label</info>
					</control>

					<control type="label">
						<posx>750</posx>
						<width>150</width>
						<align>right</align>
						<info>ListItem.Label2</info>
					</control>

				</itemlayout>

				<focusedlayout height="69" width="780">

					<control type="image">
						<width>780</width>
						<height>66</height>
						<texture border="9">global/ButtonFO.png</texture>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(20)">Conditional</animation>
					</control>

					<control type="label">
						<posx>30</posx>
						<width>720</width>
						<align>left</align>
						<info>ListItem.Label</info>
					</control>

					<control type="label">
						<posx>750</posx>
						<width>720</width>
						<align>right</align>
						<info>ListItem.Label2</info>
					</control>

				</focusedlayout>

			</control>

			<control type="label" id="12">
				<!-- Header Label -->
				<posx>23</posx>
				<posy>882</posy>
				<width>480</width>
				<align>left</align>
				<label>-</label>
			</control>

		</control>

		<control type="group">
			<!-- Right panel -->
			<posx>1035</posx>
			<posy>78</posy>

			<control type="image">
