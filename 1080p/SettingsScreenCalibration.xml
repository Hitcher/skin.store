<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- screencalibration -->
	<defaultcontrol always="true">8</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<control type="videowindow" id="20">
			<!-- videowindow -->
			<include>DimensionsFullscreen</include>
		</control>

		<control type="mover" id="8">
			<!-- top left mover -->
			<posx>0</posx>
			<posy>0</posy>
			<width>192</width>
			<height>192</height>
			<texturefocus>CalibrateTopLeft.png</texturefocus>
			<texturenofocus>-</texturenofocus>
		</control>

		<control type="mover" id="9">
			<!-- right bottom mover -->
			<posx>1050</posx>
			<posy>750</posy>
			<width>192</width>
			<height>192</height>
			<texturefocus>CalibrateBottomRight.png</texturefocus>
			<texturenofocus>-</texturenofocus>
		</control>

		<control type="mover" id="10">
			<!-- subtitle position mover -->
			<posx>300</posx>
			<posy>750</posy>
			<width>768</width>
			<height>192</height>
			<texturefocus>CalibrateSubTitles.png</texturefocus>
			<texturenofocus>-</texturenofocus>
		</control>

		<control type="resize" id="11">
			<!-- pixel aspect ratio box -->
			<posx>0</posx>
			<posy>348</posy>
			<width>384</width>
			<height>384</height>
			<texturefocus>CalibratePixelRatio.png</texturefocus>
			<texturenofocus>-</texturenofocus>
		</control>

		<control type="label" id="2">
			<!-- coordinates label -->
			<posx>30</posx>
			<posy>60</posy>
			<width>1860</width>
			<align>center</align>
			<label>-</label>
		</control>

		<control type="label" id="3">
			<!-- help information -->
			<posx>30</posx>
			<posy>105</posy>
			<width>1860</width>
			<align>center</align>
			<label>-</label>
		</control>

	</controls>

</window>