<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>!Window.IsVisible(fullscreeninfo) + [VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>

	<controls>

		<control type="group">
			<posx>105</posx>
			<posy>930</posy>

			<control type="image">
				<posx>-30</posx>
				<posy>45</posy>
				<width>1770</width>
				<height>180</height>
				<texture border="3">global/Panel.png</texture>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<label>$INFO[Player.Time]</label>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>$LOCALIZE[31000] $INFO[Player.FinishTime]</label>
				<visible>!Player.Forwarding + !Player.Rewinding + !Player.Paused</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>112</label>
				<visible>player.paused</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>FFx2</label>
				<visible>player.forwarding2x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>FFx4</label>
				<visible>player.forwarding4x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>FFx8</label>
				<visible>player.forwarding8x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>FFx16</label>
				<visible>player.forwarding16x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>FFx32</label>
				<visible>player.forwarding32x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>RWx2</label>
				<visible>player.rewinding2x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>RWx7</label>
				<visible>player.rewinding4x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>RWx8</label>
				<visible>player.rewinding8x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>RWx16</label>
				<visible>player.rewinding16x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>center</align>
				<label>RWx32</label>
				<visible>player.rewinding32x</visible>
			</control>

			<control type="label">
				<posx>1695</posx>
				<posy>84</posy>
				<width>1680</width>
				<align>right</align>
				<label>$INFO[Player.Duration]</label>
			</control>

			<control type="progress" id="23">
				<!-- Progress Bar -->
				<posx>15</posx>
				<posy>72</posy>
				<width>1680</width>
				<info>Player.Progress</info>
				<visible>true</visible>
			</control>

			<control type="slider" id="401">
				<!-- Seekbar -->
				<posx>15</posx>
				<posy>72</posy>
				<width>1680</width>
				<visible>Player.Seeking</visible>
			</control>

		</control>

	</controls>

</window>